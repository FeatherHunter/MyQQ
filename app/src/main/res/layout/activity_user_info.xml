<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.qqdemos.Activity.UserInfoActivity">

    <ImageView
        android:id="@+id/user_info_bg_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/gray2"/>
    
    <View
        android:id="@+id/user_info_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@id/user_info_bg_image">
        
    </View>

    <com.pkmmte.view.CircularImageView
        android:id="@+id/user_info_head_image"
        android:layout_width="@dimen/user_info_head_length"
        android:layout_height="@dimen/user_info_head_length"
        android:src="@drawable/default_user_head"
        app:border="true"
        app:border_color="@color/white"
        app:border_width="1dp"
        app:shadow="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_info_bottom_line"
        android:layout_marginTop="@dimen/user_info_head_length_2"
        />

    <TextView
        android:id="@+id/user_info_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_info_head_image"
        android:text="猎羽"
        android:textSize="@dimen/user_info_nickname"
        android:textColor="@color/gray9"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/head_panel_title"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="编辑"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/head_panel_title"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的资料"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/head_panel_title"/>
    </RelativeLayout>

</RelativeLayout>
