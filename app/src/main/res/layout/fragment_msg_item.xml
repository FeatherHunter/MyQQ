<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/msg_head_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/default_user_head"
        app:border="false"
        android:layout_centerVertical="true"
        app:shadow="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/msg_head_image"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/msg_head_image"
            android:orientation="vertical"
            android:layout_weight="8"
            android:weightSum="2"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/msg_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帅猎羽"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/msg_chat_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="hello"
                android:layout_weight="1"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="2"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/msg_time_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:12"
                android:textSize="12dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/msg_unread_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="10dp"
                android:singleLine="true"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
